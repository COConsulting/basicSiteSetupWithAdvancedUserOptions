<% @title="Sign up" %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      &nbsp;
    </div>
    <div class="col-md-5">
        <h1 style="text-align:center;">Register</h1>

        <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          
          <%= f.alert_message "Please fix the errors below." %>


          <div class="row">
            <div class="col-md-12">
              <%= f.email_field :email, autofocus: true, :placeholder => "you@domain.com" %>
            </div>
            <div class="col-md-12">
              <%= f.text_field :user_name, :placeholder => "Keep it clean people"  %>
            </div>
            <div class="col-md-12">
              <% 
                @start_year = Date.today.year-13 
                @end_year = Date.today.year-80
              %>
              
              <%= f.date_select(:birthday, :start_year => @start_year, :end_year => @end_year, add_month_numbers: true, :order => [:month, :day, :year], prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }, help: "You must be 13 years or older to have an account.") %>
            </div>
          </div>
          <br>
          <div class="row">
            <div class="col-md-12">
            <%= f.password_field :password, autocomplete: "off", help: "Passwords must be at least #{@minimum_password_length} characters long.", :placeholder => "Make it secure and memorable"  %>
            </div>
            <div class="col-md-12">
            <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Needs to match"  %>
            </div>
          </div>


          <p>We take your privacy seriously. View our <%= link_to "Privacy Policy", privacy_path, :target => "_blank" %> for more information on how we use your personal information.</p>

          <br/><br/>

          <%= f.primary "Sign up" %>
          
        <% end %>
      </dov>
  <div class="col-md-4">
    &nbsp;
  </div>
</div>