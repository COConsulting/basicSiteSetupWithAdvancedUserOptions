<h2>Your Profile</h2>

<div class="container">
  <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, label_errors: true) do |f| %>
    
    <%= f.alert_message "Please fix the errors below." %>

    <h3>Personal Information</h3>
      <div class="row">
        <div class="col-md-6">
          <%= f.text_field :first_name, autofocus: true %>
        </div>
        <div class="col-md-6">
          <%= f.text_field :last_name %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <% 
            if current_user.security_level == 0 
              @user_status = 'Your account is currently suspended. Please contact us for more information.'
            elsif current_user.security_level == 3 
              @user_status = 'You are a moderator.'
            elsif current_user.security_level == 5 
              @user_status = 'You are an administrator.'
            end
          %>
          <%= f.text_field :user_name, help: @user_status %>
        </div>
        <div class="col-md-6">
          <%= f.email_field :email %>
        </div>
      </div>
      
      <div class="row">
        <div class="col-md-6">
          <% 
            @end_year = Date.today.year-18 
            @start_year = Date.today.year-80
          %>
          
          <%= f.date_select(:birthday, :start_year => @start_year, :end_year => @end_year, add_month_numbers: true, :order => [:month, :day, :year], prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }, help: "You must be 18 years or older to have an account.") %>
        </div>
      </div>
      
    <h3>Address Information</h3>
      <%= f.text_field :address_1 %>
      <%= f.text_field :address_2 %>
      <div class="row">
        <div class="col-md-6">
          <%= f.text_field :city %>
        </div>
        <div class="col-md-3">
          <%= f.select :state, options_for_select(us_states, @user.state), prompt: 'Select State' %>
        </div>
        <div class="col-md-3">
          <%= f.text_field :zip_code %>
        </div>
      </div>
    
    <h3>Social Media Profiles</h3>
      <div class="row">
        <div class="col-md-1" id="social_icons">
          <% 
            @facebook_URL = "http://www.facebook.com/"

            if current_user.facebook == ''
          %>
              <a href="<%= @facebook_URL %>" target="_blank"><%= image_tag("blank.png", :height => "50",:width => "50",:alt => "Facebook",:class => "facebook_icon", :id => "icon_inactive") %></a>
          <%  
            elsif
              @facebook_URL += current_user.facebook
          %>
              <a href="<%= @facebook_URL %>" target="_blank"><%= image_tag("blank.png", :height => "50",:width => "50",:alt => "Facebook",:class => "facebook_icon", :id => "icon_active") %></a>
          <%  
            end 
          %>
        </div>
        <div class="col-md-3">
          <%= f.text_field :facebook, help: @facebook_URL %>
        </div>
        <div class="col-md-1" id="social_icons">
          <% 
            @twitter_URL = "http://www.twitter.com/"

            if current_user.twitter == ''
          %>
              <a href="<%= @twitter_URL %>" target="_blank"><%= image_tag("blank.png", :height => "50",:width => "50",:alt => "Twitter",:class => "twitter_icon", :id => "icon_inactive") %></a>
          <%  
            elsif
              @twitter_URL += current_user.twitter
          %>
              <a href="<%= @twitter_URL %>" target="_blank"><%= image_tag("blank.png", :height => "50",:width => "50",:alt => "Twitter",:class => "twitter_icon", :id => "icon_active") %></a>
          <%  
            end 
          %>
        </div>
        <div class="col-md-3">
          <%= f.text_field :twitter, help: @twitter_URL %>
        </div>
        <div class="col-md-1" id="social_icons">
          <% 
            @google_plus_URL = "http://plus.google.com/"

            if current_user.google_plus == ''
          %>
              <a href="<%= @google_plus_URL %>" target="_blank"><%= image_tag("blank.png", :height => "50",:width => "50",:alt => "Google Plus",:class => "google_plus_icon", :id => "icon_inactive") %></a>
          <%  
            elsif
              @google_plus_URL += current_user.google_plus
          %>
              <a href="<%= @google_plus_URL %>" target="_blank"><%= image_tag("blank.png", :height => "50",:width => "50",:alt => "Google Plus",:class => "google_plus_icon", :id => "icon_active") %></a>
          <%  
            end 
          %>
        </div>
        <div class="col-md-3">
          <%= f.text_field :google_plus, help: @google_plus_URL %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-1" id="social_icons">
          <% 
            @instagram_URL = "http://www.instagram.com/"

            if current_user.instagram == ''
          %>
              <a href="<%= @instagram_URL %>" target="_blank"><%= image_tag("blank.png", :height => "50",:width => "50",:alt => "Instagram",:class => "instagram_icon", :id => "icon_inactive") %></a>
          <%  
            elsif
              @instagram_URL += current_user.instagram
          %>
              <a href="<%= @instagram_URL %>" target="_blank"><%= image_tag("blank.png", :height => "50",:width => "50",:alt => "Instagram",:class => "instagram_icon", :id => "icon_active") %></a>
          <%  
            end 
          %>
        </div>
        <div class="col-md-3">
          <%= f.text_field :instagram, help: @instagram_URL %>
        </div>
        <div class="col-md-1" id="social_icons">
          <% 
            @pinterest_URL = "http://www.pinterest.com/"

            if current_user.pinterest == ''
          %>
              <a href="<%= @pinterest_URL %>" target="_blank"><%= image_tag("blank.png", :height => "50",:width => "50",:alt => "Pinterest",:class => "pinterest_icon", :id => "icon_inactive") %></a>
          <%  
            elsif
              @pinterest_URL += current_user.pinterest
          %>
              <a href="<%= @pinterest_URL %>" target="_blank"><%= image_tag("blank.png", :height => "50",:width => "50",:alt => "Pinterest",:class => "pinterest_icon", :id => "icon_active") %></a>
          <%  
            end 
          %>
        </div>
        <div class="col-md-3">
          <%= f.text_field :pinterest, help: @pinterest_URL %>
        </div>
      </div>

    <h3>Password Change</h3>
    <i>(leave blank if you don't want to change it)</i><br />
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      <div class="row">
        <div class="col-md-6">
          <%= f.password_field :password, autocomplete: "off", help: "Passwords must be at least #{@minimum_password_length} characters long." %> 
        </div>
        <div class="col-md-6"> 
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>
      </div>
    
    <br><br>
    <h3>Please enter your current password to confirm changes</h3>
      <%= f.password_field :current_password, autocomplete: "off" %>

    <%= f.primary "Update" %>

  <% end %>
</div>

<br><br><br><br>
<div class="center">
  <h3>Cancel my account</h3>

  <p>Wish to leave us :-( You can cancel your account below. <br> But, make sure this is what you really want as it can not be undone. <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p>
</div>